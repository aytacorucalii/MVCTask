@using PurpleBuzzPr.Areas.Admin.Controllers;
@model IEnumerable<Work>;

<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Work" asp-action="CreateWork">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">MainImageUrl</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Work item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><img scr="~/img/@item.MainImageUrl" width="60" /></td>

                <td><a class="btn btn-primary" asp-controller="Work" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a></td>

                <td><a class="btn btn-danger" asp-controller="Work" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>

            </tr>
        }
    </tbody>
</table>