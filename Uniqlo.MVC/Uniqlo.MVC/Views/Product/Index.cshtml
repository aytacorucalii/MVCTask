<div class="slider__container slider--one">
    <div class="slider__activation__wrap owl-carousel owl-theme">
        @foreach (SliderItem item in Model)
        {
            <!-- Start Single Slide -->
            <div class="slide slider__full--screen" @item.ImgUrl>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-4">
                            <div class="slider__inner">
                                <h1>New Product <span @item.>Title</span></h1>
                                <div class="slider__btn">
                                    <a class="htc__btn" @item.Button>Button</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Single Slide -->
        }
    </div>
</div>