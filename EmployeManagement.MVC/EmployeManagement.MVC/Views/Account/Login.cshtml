@using EmployeManagement.MVC.DTOs.UserDTOs;
@model LoginUser;


<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4"> Login</h1>
                            </div>
                            <form method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input class="form-control form-control-user" asp-for="EmailOrUsername" />
                                    </div>
                                    <div class="col-sm-6">
                                        <input class="form-control form-control-user" asp-for="Password" />
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="IsPersistent">
                                        <label class="form-check-label" for="Remember me">
                                            login
                                        </label>
                                    </div>

                                </div>

                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                    Login Account
                                </button>

                                <hr>

                                <p>
                                    @Html.ValidationSummary()
                                </p>

                                <hr>

                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                                </div>

                                <div class="text-center">
                                    <a asp-controller="Account" asp-action="Login"> Already have an account? Login!</a>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

