@model Order;

<form method="post">
    <div class="form-group">
        <label asp-for="ClientName"></label>
        <input class="form-control" asp-for="ClientName">
    </div>
    <div class="form-group">
        <label asp-for="ClientSurname"></label>
        <input class="form-control" asp-for="ClientSurname">
    </div>
    <div class="form-group">
        <label asp-for="Problem"></label>
        <input class="form-control" asp-for="Problem">
    </div>
    <div class="form-group">
        <label asp-for="ClientPhoneNumber"></label>
        <input class="form-control" asp-for="ClientPhoneNumber">
    </div>
    <div class="form-group">
        <label asp-for="ClientEmail"></label>
        <input class="form-control" asp-for="ClientEmail">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>