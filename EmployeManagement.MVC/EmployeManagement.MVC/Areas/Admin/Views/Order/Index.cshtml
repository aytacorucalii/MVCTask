@model IEnumerable<Order>

<h2>Admin Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Client Name</th>
            <th>Service</th>
            <th>Master</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ClientName @order.ClientSurname</td>
                <td>@order.Service.Title</td>
                <td>@order.Master.Name @order.Master.Surname</td>
                <td>@(order.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a href="@Url.Action("Edit", "AdminOrder", new { id = order.Id })">Edit</a> |
                    <a href="@Url.Action("Deactivate", "AdminOrder", new { id = order.Id })">Deactivate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
