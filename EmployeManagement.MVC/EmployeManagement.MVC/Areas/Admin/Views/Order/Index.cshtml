
@model IEnumerable<Order>;

<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Order" asp-action="Create">Create Order</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Problem</th>
            <th scope="col">Number</th>
            <th scope="col">Mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.ClientName</td>
                <td>@item.ClientSurname</td>
                <td>@item.Problem</td>
                <td>@item.ClientPhoneNumber</td>
                <td>@item.ClientEmail</td>
                <td><a class="btn btn-primary" asp-controller="Order" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a></td>
                <td><a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
            </tr>
        }

    </tbody>
</table>