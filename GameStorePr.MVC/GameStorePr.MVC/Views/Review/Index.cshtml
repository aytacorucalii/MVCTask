@using GameStorePr.MVC.Models;
@model Review;

@{
    ViewBag.Title = "Review Message";
}

<div class="container mt-5">
    <h2>Send Your Review</h2>
    <form asp-controller="Review" asp-action="SubmitMessage" method="post">
        <div class="form-group">
            <label for="message">Your Message</label>
            <textarea class="form-control" id="message" name="Message" rows="4" placeholder="Type your message here..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Send</button>
    </form>
</div>

