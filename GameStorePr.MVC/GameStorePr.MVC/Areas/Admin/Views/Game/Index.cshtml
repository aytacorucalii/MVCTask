 @model IEnumerable<Game>;

<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Game" asp-action="Create">Create Game</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Game item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.GameName</td>
                <td>@item.Description</td>
                <td><img src="~/img/@item.Image" width="50" /></td>
                <td><a class="btn btn-primary" asp-controller="Game" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a></td>
                <td><a class="btn btn-danger" asp-controller="Game" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
            </tr>
        }

    </tbody>
</table>