@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Welcome to Admin Panel</h1>
<p class="mt-3">Use the navigation menu to manage Doctors, Patients, and Appointments.</p>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Doctors</h5>
                <p class="card-text">Manage all doctors and their details.</p>
                <a href="@Url.Action("Index", "Doctor", new { area = "Admin" })" class="btn btn-light">Go to Doctors</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Patients</h5>
                <p class="card-text">View and manage patient information.</p>
                <a href="@Url.Action("Index", "Patient", new { area = "Admin" })" class="btn btn-light">Go to Patients</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Appointments</h5>
                <p class="card-text">Handle appointment scheduling and details.</p>
                <a href="@Url.Action("Index", "Appointment", new { area = "Admin" })" class="btn btn-light">Go to Appointments</a>
            </div>
        </div>
    </div>
</div>
