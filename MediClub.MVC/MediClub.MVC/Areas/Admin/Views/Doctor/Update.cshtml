@using MediClub.MVC.Areas.Admin.DTOs;
@model CreateDoctorDTOs

@{
    ViewData["Title"] = "Doctors List";
}

<h2>Doctors List</h2>

<a href="@Url.Action("Create", "Doctor", new { area = "Admin" })" class="btn btn-primary">Add New Doctor</a>

<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" asp-for="ImageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
